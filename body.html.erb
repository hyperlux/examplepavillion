<div class="landing page">  
  <div class="container">
    <div class="title-container">
      <% if !mobile_view? && @welcome.present? %>
        <div class="lottie title welcome"></div>
      <% else %>
        <h1>Welcome to Auroville Community Platform!</h1>
      <% end %>
    </div>
    <div class="text-container">
      <div class="secondary-text">
        Connect, collaborate, and grow with the Auroville community. Explore our platform to discover events, join discussions, and contribute to our shared vision.
      </div>
      <ul class="platform-features">
        <li><a href="/events" title="Events">
          <div class="image events"></div>
          <span>Events</span>
        </a></li>
        <li><a href="/forums" title="Forums">
          <div class="image forums"></div>
          <span>Forums</span>
        </a></li>
        <li><a href="/projects" title="Projects">
          <div class="image projects"></div>
          <span>Projects</span>
        </a></li>
        <li><a href="/more" class="more">Explore More</a></li>
      </ul>
    </div>
    <div class="personalization-options">
      <h2>How would you like to get started?</h2>
      <div class="options">
        <a href="/explore" class="btn btn-primary">Explore the Community</a>
        <a href="/profile" class="btn btn-secondary">Set Up Your Profile</a>
        <a href="/guide" class="btn btn-secondary">Take a Guided Tour</a>
      </div>
    </div>
  </div>
</div>

<% if @welcome.present? %>
  <script>
    var title = lottie.loadAnimation({
      container: document.querySelector(".lottie.welcome"),
      renderer: 'svg',
      autoplay: true,
      loop: false,
      path: "<%= @welcome.upload.url %>"
    });
    title.setSpeed(0.2);
  </script>
<% end %>